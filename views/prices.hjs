<!DOCTYPE html>
<html>
  <head>
    <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    </head>
  </head>
  <body>
   <script>
     $(document).ready(function() {
        const sessionToken = document.cookie.includes('session_token');
        if (!sessionToken) {
          location.href = '/';
        }
      });
       $(document).ready(function(){
        $("#submit").click(function() {
 
          const originId = $('#origin').val();
          const destinationId = $('#destination').val();

          $.ajax({
            type: "GET",
            url: `/api/v1/tickets/price?originId=${originId}&destinationId=${destinationId}` ,
            success: function(serverResponse) {
              if(serverResponse) {
                const {price}=serverResponse[0];
                document.getElementById("Price").innerHTML =price;
              }
            },
            error: function(errorResponse) {
              if(errorResponse) {
                alert(`Error: ${errorResponse.responseText}`);
                $('#origin').val('');
                $('#destination').val('');
              }            
            }
          });
        });
       
      });
   </script>
    <div>
      <nav class="navbar navbar-inverse" style="padding-left:20px; padding-right:20px">
          <ul class="nav navbar-nav">
           <li ><a href="/dashboard">Home</a></li>
            <li><a href="/subscriptions">Subscriptions</a></li>
            <li><a href="/tickets">Tickets</a></li>
            <li class="active"><a href="/prices">Prices</a></li>
            <li><a href="/rides">Rides</a></li>
            <li><a href="/requests">Requests</a></li>
            <li ><a href="/resetpassword">Reset password</a></li>
            <li><a href="/">Logout</a></li>
          </ul>
      </nav>
    </div>
<div style ="padding-left:20px">
  <form class="form-horizontal" style="width: 50%;">
      <div class="form-group">
          <label for="origin" class=" control-label">Origin ID : </label>
          <input type="number" class="form-control" id="origin" name="" placeholder="origin station id" value="" min="0" >
      </div>
       <div class="form-group">
          <label for="destination" class=" control-label">Destination ID : </label>
          <input type="number" class="form-control" id="destination" name="" placeholder="destination station id" value=""  min="0">
      </div>
      <div class="form-group">
          <div>
              <input id="submit" name="check" type="button" value="Check" class="btn btn-primary">
          </div>
      </div>
      <div class="form-group">
          <label >Price : </label>
          <label id="Price"></label>
      </div>
      </form>
</div>
  </body>
</html>